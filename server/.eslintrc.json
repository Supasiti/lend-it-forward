{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended", 
    "prettier", 
    "airbnb-base",
    "airbnb"
  ],
  "rules": {
    // Allow Prettier to throw errors via ESLint
    "prettier/prettier": "error" 
  }
}
