{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "jsx": true
  },
  "plugins": ["react", "prettier", "react-hooks"],
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended",
    "prettier", 
    "prettier/react"
  ],
  "rules": {
    // Allow Prettier to throw errors via ESLint
    "prettier/prettier": "error", 
    "react/jsx-uses-react": "off", // for modern React webhook versions 
    "react/react-in-jsx-scope": "off", // for modern React webhook versions
    "no-console": "off"
  }
}
